<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rowaida.todo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".framework.ToDoApplication"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ToDo">
        <activity android:name=".presentation.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.activity.LoginActivity" />
        <activity android:name=".presentation.activity.SignupActivity" />
        <activity android:name=".presentation.activity.NotesAdminActivity"/>
        <activity android:name=".presentation.activity.NotesSubAccountActivity"/>
        <service android:name=".presentation.activity.ToDoService" />
    </application>

</manifest>